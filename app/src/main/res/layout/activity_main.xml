<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.wordpress.bayuteguhpamuji.practiceset2.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team A"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:padding="4dp"/>
        <TextView
            android:id="@+id/team_a_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:padding="4dp"/>
        <Button
            android:id="@+id/btnPoint3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+3 Point"
            android:layout_margin="8dp"
            android:onClick="displayScore3"/>
        <Button
            android:id="@+id/btnPoint2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2 Point"
            android:layout_margin="8dp"
            android:onClick="displayScore2"/>
        <Button
            android:id="@+id/btnPointFree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Free Throw"
            android:layout_margin="8dp"
            android:onClick="displayScoreFree"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:padding="4dp"/>
        <TextView
            android:id="@+id/team_b_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:padding="4dp"/>
        <Button
            android:id="@+id/btnPoint3_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+3 Point"
            android:layout_margin="8dp"
            android:onClick="displayScore3"/>
        <Button
            android:id="@+id/btnPoint2_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2 Point"
            android:layout_margin="8dp"
            android:onClick="displayScore2"/>
        <Button
            android:id="@+id/btnPointFree_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Free Throw"
            android:layout_margin="8dp"
            android:onClick="displayScoreFree"/>
    </LinearLayout>

</LinearLayout>
